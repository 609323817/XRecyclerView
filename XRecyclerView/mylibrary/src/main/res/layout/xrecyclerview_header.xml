<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="bottom"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/xrecyclerview_header_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/xrecyclerview_arrow"/>

            <ProgressBar
                android:id="@+id/xrecyclerview_header_pro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                />

            <com.zhttty.mylibrary.FitView
                android:id="@+id/xrecyclerview_header_fit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="invisible"/>
        </FrameLayout>

        <TextView
            android:id="@+id/xrecyclerview_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frame"
            android:layout_alignTop="@+id/frame"
            android:layout_toRightOf="@+id/frame"
            android:gravity="center_vertical"
            android:minWidth="90dp"
            android:text="继续下拉请求新数据"/>

        <TextView
            android:id="@+id/xrecyclerview_header_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>
